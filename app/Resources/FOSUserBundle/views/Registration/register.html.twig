{% extends '@FOSUser/layout.html.twig' %}

{% block content %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-signup','name':'form'}}) }}

    <div class="form-group">
        {{ form_label(form.username,"Login / Nom d'utilisateur") }}
        {% if form_errors(form.username) %}
            <div class="alert alert-danger">
                {{ form_errors(form.username) }}
            </div>
        {% endif %}
        {{ form_widget(form.username, {'attr': {'class':'form-control'}}) }}
    </div>


    <div class="form-group">
        {{ form_label(form.email,"Adresse email") }}
        {% if form_errors(form.email) %}
            <div class="alert alert-danger">
                {{ form_errors(form.email) }}
            </div>
        {% endif %}
        {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
    </div>

    <div class="formroup">
        {{ form_label(form.plainPassword,"Mot de passe") }}
        {% if form_errors(form.plainPassword) %}
            <div class="alert alert-danger">
                {{ form_errors(form.plainPassword) }}
            </div>
        {% endif %}
        {{ form_widget(form.plainPassword, {'attr': {'class':'form-control'}}) }}
    </div>

    <button type="submit" class="btn btn-primary">Cr√©er un compte</button>
    {{ form_end(form) }}

{% endblock %}